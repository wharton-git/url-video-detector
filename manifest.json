{
    "manifest_version": 3,
    "name": "UVD",
    "version": "1.0",
    "description": "A Browser Extension for URL Video Detection",
    "permissions": [
        "tabs",
        "activeTab",
        "notifications"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_icon": "icon.png"
    },
    "icons": {
        "48": "icon.png",
        "128": "icon.png"
    }
}